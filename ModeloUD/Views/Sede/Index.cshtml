@model IEnumerable<Sede>

@{
    ViewData["Title"] = "Sedes";
}
<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-table me-1"></i>
        Lista de sedes
    </div>
    <div class="card-body">
        <table class="table">
            <thead align="center">
                <tr>
                    <th>@Html.DisplayNameFor(model=>model.Id)</th>
                    <th>@Html.DisplayNameFor(model=>model.Nombre)</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody align="center">
            @if (Model.Count()!=0)
            {
                foreach (var item in Model)
                {
                <tr>
                    <td>@Html.DisplayFor(x=>item.Id)</td>
                    <td>@Html.DisplayFor(x=>item.Nombre)</td>
                    <td>
                        <a asp-action="Edit" class="btn" asp-route-id="@item.Id">
                            <i class="fa-solid fa-pen-to-square"></i>
                        </a>
                        <a class="btn" asp-action="Delete" asp-route-id="@item.Id">
                            <i class="fa-solid fa-building-circle-xmark"></i>
                        </a>
                    </td>
                </tr>
                }
            }
             </tbody>
        </table>
    </div>
</div>