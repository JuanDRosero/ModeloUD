@model Sede
@{
    ViewData["Title"] = "Agregar Sede";
}
<div class="container-fluid px-4">
    <main>
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-7">
                    <div class="card shadow-lg border-0 rounded-lg mt-5">
                        <div class="card-header"><h3 class="text-center font-weight-light my-4">Crear Sede</h3></div>
                        <div class="card-body">
                            <form method="post" asp-action="Create">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-floating mb-3">
                                    <input class="form-control" id="inputIdentificador" asp-for="Id" placeholder="Identificador" maxlength="3" />
                                    <label asp-for="Id">Identificador de la Sede</label>
                                     <span asp-validation-for="Id" class="text-danger"></span>
                                </div>
                                <div class="form-floating mb-3">
                                    <input class="form-control" id="inputSede" asp-for="Nombre" placeholder="Nombre de la Sede" />
                                    <label asp-for="Nombre">Nombre de la Sede</label>
                                    <span asp-validation-for="Nombre" class="text-danger"></span>
                                </div>
                                <div class="mt-4 mb-0">
                                    <div class="d-grid"><button class="btn btn-primary btn-block" type="submit">Crear Sede</button></div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>