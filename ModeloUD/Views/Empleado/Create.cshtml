@model EmpleadoViewModel
@{
    ViewData["Title"] = "Agregar Empleado";
}
<div class="container-fluid px-4">
    <main>
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-7">
                    <div class="card shadow-lg border-0 rounded-lg mt-5">
                        <div class="card-header"><h3 class="text-center font-weight-light my-4">Crear Empleado</h3></div>
                        <div class="card-body">
                            <form method="post" asp-action="Create">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-floating mb-3">
                                    <input class="form-control" id="inputPK" asp-for="Empleado.Id" placeholder="123" />
                                    <label asp-for="Empleado.Id"></label>
                                    <span asp-validation-for="Empleado.Id" class="text-danger"></span>
                                </div>
                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <div class="form-floating mb-3 mb-md-0">
                                            <input class="form-control" id="inputNombre" asp-for="Empleado.Nombre" placeholder="Nombre" />
                                            <label asp-for="Empleado.Nombre"></label>
                                            <span asp-validation-for="Empleado.Nombre" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-floating">
                                            <input class="form-control" id="inputApellido"asp-for="Empleado.Apellido" placeholder="Apellido" />
                                            <label asp-for="Empleado.Apellido"></label>
                                            <span asp-validation-for="Empleado.Apellido" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-floating mb-3">
                                    <input class="form-control" id="inputCod" asp-for="Empleado.Codigo" placeholder="2022xxxxxxx" min="0" max="9999999999" maxlength="10" />
                                    <label asp-for="Empleado.Codigo"></label>
                                    <span asp-validation-for="Empleado.Codigo" class="text-danger"></span>

                                </div>
                                <div class="form-floating mb-3">

                                    <select asp-for="Empleado.Rol" asp-items="Model.listaRoles">
                                        <option disabled selected>Selecciona una opcion</option>
                                        <option value="Administrador">123</option>
                                        <option value="Director">456</option>
                                        <option value="Fisioterapeuta">789</option>
                                        <option value="Entrenador">111</option>
                                        <option value="Auxiliar">222</option>
                                        <option value="Docente">333</option>
                                    </select>
                                    <span asp-validation-for="Empleado.Rol" class="text-danger"></span>
                                    
                                    <!-- select class="form-control" id="inputRol">
                                        <option disabled selected>Selecciona una opcion</option>
                                        <option value="Administrador">123</option>
                                        <option value="Director">456</option>
                                        <option value="Fisioterapeuta">789</option>
                                        <option value="Entrenador">111</option>
                                        <option value="Auxiliar">222</option>
                                        <option value="Docente">333</option>
                                    </!--select -->
                                    
                                </div>
                                <div class="form-floating mb-3">
                                    <select asp-for="Empleado.Sede" asp-items="Model.listaSedes">
                                        <option disabled selected>Selecciona una sede</option>
                                        <option value="Administrador">222</option>
                                        <option value="Director">111</option>
                                        <option value="Fisioterapeuta">789</option>
                                        <option value="Entrenador">456</option>
                                        <option value="Auxiliar">123</option>
                                    </select>
                                    <!-- span asp-validation-for="Empleado.Sede" class="text-danger"></!--span>
                                    <select class="form-control" id="inputRol">
                                        <option disabled selected>Selecciona una sede</option>
                                        <option value="Administrador">222</option>
