<div class="container-fluid px-4">
    <main>
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-7">
                    <div class="card shadow-lg border-0 rounded-lg mt-5">
                        <div class="card-header"><h3 class="text-center font-weight-light my-4">Crear Empleado</h3></div>
                        <div class="card-body">
                            <form>
                                <div class="form-floating mb-3">
                                    <input class="form-control" id="inputPK" type="text" placeholder="123" min="0" max="999" maxlength="3" />
                                    <label for="inputPK">Identificador</label>
                                </div>
                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <div class="form-floating mb-3 mb-md-0">
                                            <input class="form-control" id="inputNombre" type="text" placeholder="Nombre" />
                                            <label for="inputNombre">Nombre</label>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-floating">
                                            <input class="form-control" id="inputApellido" type="text" placeholder="Apellido" />
                                            <label for="inputApellido">Apellido</label>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-floating mb-3">
                                    <input class="form-control" id="inputCod" type="number" placeholder="2022xxxxxxx" min="0" max="9999999999" maxlength="10" />
                                    <label for="inputCod">No de identificacion</label>
                                </div>
                                <div class="form-floating mb-3">
                                    <select class="form-control" id="inputRol">
                                        <option disabled selected>Selecciona una opcion</option>
                                        <option value="Administrador">Administrador Deportivo</option>
                                        <option value="Director">Director Deportivo</option>
                                        <option value="Fisioterapeuta">Fisioterapeuta</option>
                                        <option value="Entrenador">Entrenador Deportivo</option>
                                        <option value="Auxiliar">Auxiliar Deportivo</option>
                                        <option value="Docente">Docente</option>
                                    </select>
                                </div>
                                <div class="form-floating mb-3">
                                    <select class="form-control" id="inputRol">
                                        <option disabled selected>Selecciona una sede</option>
                                        <option value="Administrador">La 40</option>
                                        <option value="Director">La maca</option>
                                        <option value="Fisioterapeuta">La tecno</option>
                                        <option value="Entrenador">Bosa</option>
                                        <option value="Auxiliar">La ASAB</option>
                                    </select>
                                </div>
                                <div class="mt-4 mb-0">
                                    <div class="d-grid"><a class="btn btn-primary btn-block" href="#">Crear Empleado</a></div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>