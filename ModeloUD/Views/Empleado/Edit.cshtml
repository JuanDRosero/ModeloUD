@model EmpleadoViewModel
@{
    ViewData["Title"] = "Editar Empleado";
}
<div class="card-body">
    <form method="post" asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating mb-3">
                <input class="form-control" id="inputPK" asp-for="Empleado.Id" placeholder="123" />
                <label asp-for="Empleado.Id"></label>
                <span asp-validation-for="Empleado.Id" class="text-danger"></span>
            </div>
            <div class="row mb-3">
                <div class="col-md-6">
                    <div class="form-floating mb-3 mb-md-0">
                        <input class="form-control" id="inputNombre" asp-for="Empleado.Nombre" placeholder="Nombre" />
                        <label asp-for="Empleado.Nombre"></label>
                        <span asp-validation-for="Empleado.Nombre" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-floating">
                        <input class="form-control" id="inputApellido"asp-for="Empleado.Apellido" placeholder="Apellido" />
                        <label asp-for="Empleado.Apellido"></label>
                        <span asp-validation-for="Empleado.Apellido" class="text-danger"></span>
                    </div>
                </div>
            </div>
             <div class="form-floating mb-3">
                <input class="form-control" id="inputCod" asp-for="Empleado.Codigo" placeholder="2022xxxxxxx" min="0" max="9999999999" maxlength="10" />
                <label asp-for="Empleado.Codigo"></label>
                <span asp-validation-for="Empleado.Codigo" class="text-danger"></span>
             </div>
             <div class="form-floating mb-3">
                <select asp-for="Empleado.Rol" asp-items="Model.listaRoles">

                </select>
                <span asp-validation-for="Empleado.Rol" class="text-danger"></span>
                                    
             </div>
             <div class="form-floating mb-3">
                <select asp-for="Empleado.Sede" asp-items="Model.listaSedes">

                </select>
                <span asp-validation-for="Empleado.Sede" class="text-danger"></span>
                                    
             </div>
             <div class="mt-4 mb-0">
                <div class="d-grid"><button class="btn btn-primary btn-block" action="submit">Guardar Empleado</button></div>
             </div>
    </form>
</div>